 diyetisyen tablosu:

CREATE TABLE diyetisyen (
    id INT AUTO_INCREMENT PRIMARY KEY,
    ad VARCHAR(50),
    soyad VARCHAR(50),
    email VARCHAR(100) UNIQUE,
    telefon VARCHAR(20),
    sifre VARCHAR(100)
);
 musteri tablosu:

CREATE TABLE musteri (
    id INT AUTO_INCREMENT PRIMARY KEY,
    ad VARCHAR(50),
    soyad VARCHAR(50),
    email VARCHAR(100) UNIQUE,
    telefon VARCHAR(20),
    dogum_tarihi DATE,
    cinsiyet ENUM('Erkek','Kadƒ±n'),
    boy_cm INT,
    kilo_kg FLOAT,
    diyetisyen_id INT,
    FOREIGN KEY (diyetisyen_id) REFERENCES diyetisyen(id)
);
 diyet_plani tablosu:

CREATE TABLE diyet_plani (
    id INT AUTO_INCREMENT PRIMARY KEY,
    musteri_id INT,
    baslangic_tarihi DATE,
    bitis_tarihi DATE,
    aciklama TEXT,
    FOREIGN KEY (musteri_id) REFERENCES musteri(id)
);
 ogun tablosu:

CREATE TABLE ogun (
    id INT AUTO_INCREMENT PRIMARY KEY,
    diyet_plani_id INT,
    tarih DATE,
    ogun_turu ENUM('Kahvaltƒ±','√ñƒüle','Ak≈üam','Ara √ñƒü√ºn'),
    icerik TEXT,
    kalori INT,
    FOREIGN KEY (diyet_plani_id) REFERENCES diyet_plani(id)
);
 olcumler tablosu:

CREATE TABLE olcumler (
    id INT AUTO_INCREMENT PRIMARY KEY,
    musteri_id INT,
    tarih DATE,
    kilo_kg FLOAT,
    yag_orani FLOAT,
    kas_orani FLOAT,
    FOREIGN KEY (musteri_id) REFERENCES musteri(id)
);
 geribildirim tablosu:

CREATE TABLE geribildirim (
    id INT AUTO_INCREMENT PRIMARY KEY,
    musteri_id INT,
    diyetisyen_id INT,
    tarih DATE,
    yorum TEXT,
    FOREIGN KEY (musteri_id) REFERENCES musteri(id),
    FOREIGN KEY (diyetisyen_id) REFERENCES diyetisyen(id)
);
